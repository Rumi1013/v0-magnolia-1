{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "api/myFunc.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/shopify/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/shopify/(.*)",
      "dest": "/api/shopify/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/shop", "dest": "/shop" },
    { "src": "/shop/(.*)", "dest": "/shop/$1" },
    { "src": "/midnight-magnolia/(.*)", "dest": "/midnight-magnolia/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}